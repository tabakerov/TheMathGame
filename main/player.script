function init(self)
	msg.post(".", "acquire_input_focus")

	self.moving = false
	self.input  = vmath.vector3()
	self.dir    = vmath.vector3(0, 1, 0)
	self.speed  = 50
end

function final(self)
	msg.post(".", "release_input_focus")
end

function update(self, dt)
	if self.moving then
		local pos = go.get_position()
		pos = pos + self.dir * self.speed * dt
		go.set_position(pos)
	end

	self.input.x = 0
	self.input.y = 0
	self.moving = false
end

